#BSUB -e run_mgard_hurricanee.%J

source ../evn_scripts/evn.bash.summit

batch=128
count=$((65536/batch))
relerr=0.1

data=$HURR_DIR/CLOUDf48.log10.bin.f32
valueRange=10.152030
abserr=$(echo "scale=15; $valueRange*$relerr" | bc -l)
echo "===== name=$data  ========"
for ((i=1; i<=$batch; i++)); do
       jsrun -n1 awk "$(((i-1)*count))<=NR && NR<$(((i)*count))" c_gen.txt | while read line; do $MGARD_DIR/build/test/test_reconstructor ${data} 0 1 $abserr  0 $line done; done &
done
wait

